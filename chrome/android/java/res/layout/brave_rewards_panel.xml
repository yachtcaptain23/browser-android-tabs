<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_brave_rewards_panel"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|top"
    android:background="@drawable/bat_panel_gradient">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:background="@drawable/bat_outline">

        <GridLayout
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="35dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="25dp"
            android:columnCount="1">

            <TextView
                android:id="@+id/get_ready_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/brave_ui_welcome_header_two"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha=".5"
                android:layout_row="1"/>

            <ImageView
                android:layout_height="80dp"
                android:layout_width="110dp"
                android:src="@drawable/bat_icon"
                android:layout_row="2"
                android:layout_gravity="center"
                tools:ignore="ContentDescription"/>

            <TextView
                android:id="@+id/brave_rewards_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/brave_rewards_message"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="28sp"
                android:textColor="#FFFFFF"
                android:layout_row="3"/>

            <TextView
                android:id="@+id/get_paid_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_margin="15dp"
                android:text="@string/brave_ui_welcome_desc_two"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:alpha=".5"
                android:layout_row="4"/>

            <Button
                android:id="@+id/join_rewards_id"
                android:layout_height="50dp"
                android:layout_width="fill_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="19dp"
                android:background="@drawable/rewards_button"
                android:text="@string/brave_ui_welcome_button_text_two"
                android:gravity="center"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_row="5"
                android:alpha=".5"/>

            <TextView
                android:id="@+id/learn_more_id"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:text="@string/brave_ui_welcome_footer_text_two"
                android:gravity="center_horizontal"
                android:layout_gravity="center"
                android:fontFamily="sans-serif"
                android:textSize="12sp"
                android:textColor="#73CBFF"
                android:clickable="true"
                android:layout_row="6"/>
        </GridLayout>
    </LinearLayout>
</ScrollView>