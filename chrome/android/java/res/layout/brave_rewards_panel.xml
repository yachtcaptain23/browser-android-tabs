<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="end|top">

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_brave_rewards_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:background="@drawable/bat_panel_gradient">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/bat_outline">

            <GridLayout
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="35dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="25dp"
                android:columnCount="1">

                <TextView
                    android:id="@+id/get_ready_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/brave_ui_welcome_header_two"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:alpha=".5"
                    android:layout_row="0"/>

                <ImageView
                    android:layout_height="80dp"
                    android:layout_width="110dp"
                    android:src="@drawable/bat_icon"
                    android:layout_row="1"
                    android:layout_gravity="center"
                    tools:ignore="ContentDescription"/>

                <TextView
                    android:id="@+id/brave_rewards_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/brave_rewards_message"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="28sp"
                    android:textColor="#FFFFFF"
                    android:layout_row="2"/>

                <TextView
                    android:id="@+id/get_paid_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:layout_margin="15dp"
                    android:text="@string/brave_ui_welcome_desc_two"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:alpha=".5"
                    android:layout_row="3"/>

                <Button
                    android:id="@+id/join_rewards_id"
                    android:layout_height="50dp"
                    android:layout_width="fill_parent"
                    android:layout_marginBottom="19dp"
                    android:background="@drawable/rewards_button"
                    android:text="@string/brave_ui_welcome_button_text_two"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:layout_row="4"
                    android:alpha=".5"/>

                <TextView
                    android:id="@+id/learn_more_id"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="@string/brave_ui_welcome_footer_text_two"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif"
                    android:textSize="12sp"
                    android:textColor="#73CBFF"
                    android:clickable="true"
                    android:layout_row="5"/>
            </GridLayout>
        </LinearLayout>
    </ScrollView>


    <ScrollView
        android:id="@+id/sv_no_website"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|top"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bat_panel_gradient">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/panel">

                    <GridLayout
                        android:id="@+id/no_website_gridlayout"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_marginStart="10dp"
                        android:layout_marginBottom="10dp"
                        android:columnCount="2">

                        <TextView
                            android:id="@+id/your_wallet_id"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_gravity="start|top"
                            android:text="@string/brave_ui_your_wallet"
                            android:fontFamily="sans-serif"
                            android:gravity="start"
                            android:textSize="16sp"
                            android:textColor="#FFFFFF"
                            android:alpha=".5"
                            android:layout_row="0"
                            android:layout_columnSpan="2"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_row="1"
                            android:layout_columnSpan="2">

                            <GridLayout
                                android:layout_height="wrap_content"
                                android:layout_width="fill_parent"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:columnCount="2">
                                <TextView
                                    android:id="@+id/br_bat_wallet"
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:text=""
                                    android:layout_gravity="end"
                                    android:fontFamily="sans-serif"
                                    android:textSize="28sp"
                                    android:textColor="#FFFFFF"
                                    android:layout_row="0"
                                    android:layout_column="0"/>
                                <TextView
                                    android:id="@+id/br_bat"
                                    android:layout_height="wrap_content"
                                    android:layout_width="fill_parent"
                                    android:text="@string/brave_ui_bat"
                                    android:layout_gravity="start"
                                    android:textSize="18sp"
                                    android:layout_marginStart="5dp"
                                    android:textColor="#FFFFFF"
                                    android:alpha=".5"
                                    android:layout_row="0"
                                    android:layout_column="1"/>
                            </GridLayout>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/br_usd_wallet"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:text="@string/brave_ui_usd"
                            android:layout_gravity="top|center"
                            android:fontFamily="sans-serif"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF"
                            android:alpha=".5"
                            android:layout_row="2"
                            android:layout_columnSpan="2"
                            android:layout_rowSpan="2"/>

                        <Button
                            android:id="@+id/br_add_funds"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/rewards_image_button"
                            android:text="@string/brave_rewards_local_panel_add_funds"
                            android:layout_gravity="end"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:drawableStart="@drawable/add_funds"
                            android:drawablePadding="5sp"
                            android:layout_row="3"
                            android:layout_column="0"/>

                        <Button
                            android:id="@+id/br_rewards_settings"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:layout_marginTop="30dp"
                            android:background="@drawable/rewards_image_button"
                            android:text="@string/brave_ui_settings"
                            android:layout_gravity="start"
                            android:fontFamily="sans-serif"
                            android:textSize="12sp"
                            android:textColor="#FFFFFF"
                            android:drawableStart="@drawable/rewards_settings"
                            android:drawablePadding="5sp"
                            android:layout_row="3"
                            android:layout_column="1"/>

                    </GridLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bat_panel_slider_gradient">

                <GridLayout
                    android:id="@+id/no_website_summary"
                    android:layout_height="wrap_content"
                    android:layout_width="fill_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginBottom="25dp"
                    android:columnCount="1">

                    <TextView
                        android:id="@+id/rewards_summary_id"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_gravity="start|top"
                        android:text="@string/brave_ui_rewards_summary"
                        android:fontFamily="sans-serif"
                        android:gravity="start"
                        android:textSize="14sp"
                        android:textColor="#a1a8f2"
                        android:alpha=".5"
                        android:layout_row="0"/>

                    <TextView
                        android:id="@+id/rewards_summary_month"
                        android:layout_height="wrap_content"
                        android:layout_width="fill_parent"
                        android:layout_gravity="start|top"
                        android:text=""
                        android:fontFamily="sans-serif"
                        android:gravity="start"
                        android:textSize="18sp"
                        android:textColor="#4c54d2"
                        android:alpha=".5"
                        android:layout_row="1"/>

                </GridLayout>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>
